// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  uuid         String         @id @default(uuid())
  userUUID     String         @unique @map("user_uuid") @db.VarChar(36)
  name         String
  bio          String?
  location     String?
  age          Int?
  height       String?
  gender       Gender
  interests    String[]
  photos       String[]
  languages    String[]
  socialMedias SocialMedias[]

  @@map("profile")
}

model SocialMedias {
  uuid        String      @id @default(uuid())
  name        SocialMedia
  username    String
  profileUUID String      @map("profile_uuid") @db.VarChar(36)
  profile     Profile     @relation(fields: [profileUUID], references: [uuid])

  @@unique([profileUUID, name])
  @@map("social_medias")
}

enum Gender {
  MALE
  FEMALE
}

enum SocialMedia {
  FACEBOOK
  TWITTER
  TIKTOK
  INSTAGRAM
  SNAPCHAT
}
